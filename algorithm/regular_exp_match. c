
#include <stdio.h>
#include <stdbool.h>

bool isMatch(char * s, char * p){
      if(*s==0 && *p==0){
          return true;
      }
      if(*s!=0 && *p==0){
          return false;
      }
      if(*s==0 && *p!=0){
          if(*(p+1)=='*'){
              return true;
          }
          else{
              return false;
          }
      }
      if(*s==*p || *p=='.'){
          return isMatch(s+1,p);
      }
      if(*(p+1)=='*'){
          if(*(p+2)='.'){
              return isMatch(++s,p+2);
          }
          else{
              return isMatch(s+2,p+1);
          }
      }
      return isMatch(s,p);
}
